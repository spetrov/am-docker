<!DOCTYPE ModuleProperties PUBLIC "=//iPlanet//Authentication Module Properties XML Interface 1.0 DTD//EN"
        "jar://com/sun/identity/authentication/Auth_Module_Properties.dtd">

<ModuleProperties moduleName="JwtProofOfPossession" version="1.0">
    <Callbacks length="0" order="1">
        <!-- Empty -->
    </Callbacks>
    <Callbacks length="1" order="2">
        <HttpCallback>
            <HttpHeader>Authorization</HttpHeader>
            <Negotiation>WWW-Authenticate:X-JWT-PoP realm="${realm}", challenge="${challenge}"</Negotiation>
            <HttpErrorCode>401</HttpErrorCode>
        </HttpCallback>
    </Callbacks>
</ModuleProperties>
